@model EmployeeManager.Models.Employee

@{
    ViewBag.Title = "Confirm Employee's exclusion";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    Html.HiddenFor(model => model.id);

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(model => model.name, new { @class= "form-control-plaintext" })
    </div>

    <div class="form-group">
        <label>E-mail</label>
        @Html.TextBoxFor(model => model.email, new { @class = "form-control-plaintext" })
    </div>

    <div class="form-group">
        <label>Department</label>
        @Html.TextBoxFor(model => model.department, new { @class = "form-control-plaintext" })
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index","Employees")" class="btn btn-link">Cancel</a>    
}